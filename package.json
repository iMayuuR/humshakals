{
  "name": "humshakals",
  "version": "3.0.4",
  "description": "Humshakals: The Ultimate Responsive Design Browser. Test your website on 20+ devices simultaneously with synchronized scrolling, clicks, and touch emulation.",
  "main": "./out/main/index.js",
  "author": "Mayur Panchal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iMayuuR/humshakals.git"
  },
  "bugs": {
    "url": "https://github.com/iMayuuR/humshakals/issues"
  },
  "homepage": "https://github.com/iMayuuR/humshakals#readme",
  "category": "public.app-category.developer-tools",
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --config .eslintrc.cjs",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "start": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "release": "npm run build && electron-builder --win --publish always"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@iconify/react": "^4.1.1",
    "@reduxjs/toolkit": "^2.0.1",
    "clsx": "^2.1.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.7.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "tailwind-merge": "^2.2.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "electron": "^40.4.0",
    "electron-builder": "^26.7.0",
    "electron-vite": "^5.0.0",
    "eslint": "^8.56.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "build": {
    "appId": "com.humshakals.app",
    "productName": "Humshakals",
    "copyright": "Copyright Â© 2026 Mayur Panchal",
    "directories": {
      "output": "dist/${version}"
    },
    "files": [
      "out/**/*",
      "src/renderer/index.html"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "iMayuuR",
        "repo": "humshakals"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "shortcutName": "Humshakals"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "resources/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "resources/icon.png"
    }
  },
  "overrides": {
    "esbuild": "^0.25.0"
  }
}